<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update Period</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }
    </style>
</head>
<body>
    <h1>Update Period</h1>
    <form action="/period/update/<%= period.id %>" method="POST">
        <input type="hidden" name="id" value="<%= period.id %>">
        
        <label for="year_id">Year:</label>
        <select id="year_id" name="year_id" required>
            <% schoolYears.forEach(year => { %>
                <option value="<%= year.id %>" <%= year.id === period.year_id ? 'selected' : '' %>><%= year.year_name %></option>
            <% }) %>
        </select><br><br>

        <label for="name">Name:</label>
        <input type="text" id="name" name="name" value="<%= period.name %>" required><br><br>

        <label for="start_time">Start Time:</label>
        <input type="time" id="start_time" name="start_time" value="<%= period.start_time %>" required><br><br>

        <label for="end_time">End Time:</label>
        <input type="time" id="end_time" name="end_time" value="<%= period.end_time %>" required><br><br>

        <button type="submit">Update</button>
    </form>
    <a href="/period"><button>Back</button></a>
</body>
</html>