<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Classroom Types</title>
  <style>
    body {
      font-family: Helvetica, sans-serif;
      padding: 20px;
    }
    table {
      width: 100%;
      border-collapse: collapse;
      margin-bottom: 20px;
    }
    table, th, td {
      border: 1px solid black;
    }
    th, td {
      padding: 10px;
      text-align: left;
    }
    button {
      padding: 10px 15px;
      background-color: #4CAF50;
      color: white;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }
    .delete-btn {
      background-color: red;
    }
  </style>
</head>
<body>
  <h1>Classroom Types</h1>
  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% classroomTypes.forEach(function(classroomType) { %>
      <tr>
        <td><%= classroomType.id %></td>
        <td><%= classroomType.name %></td>
        <td>
          <a href="/classroom_types/update/<%= classroomType.id %>">
            <button>Update</button>
          </a>
          <a href="/classroom_types/delete/<%= classroomType.id %>">
            <button class="delete-btn">Delete</button>
          </a>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
  <a href="/classroom_types/create">
    <button>Create New Classroom Type</button>
  </a>
</body>
</html>