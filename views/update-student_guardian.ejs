<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Update Student-Guardian Relationship</title>
  <style>
    .form-container {
      max-width: 400px;
      margin: 0 auto;
    }
    label {
      display: block;
      margin-bottom: 10px;
    }
    input, select {
      width: 100%;
      padding: 10px;
      margin-bottom: 15px;
    }
    .btn {
      padding: 10px;
      background-color: #4CAF50;
      color: white;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }
  </style>
</head>
<body>
  <h1>Update Student-Guardian Relationship</h1>
  <div class="form-container">
    <form action="/student_guardian/update/<%= student_guardian.student_id %>/<%= student_guardian.guardian_id %>" method="POST">
      <label for="student_id">Student:</label>
      <select name="student_id" disabled>
        <% students.forEach(student => { %>
          <option value="<%= student.id %>" <%= student.id === student_guardian.student_id ? 'selected' : '' %>>
            <%= student.given_name %> <%= student.last_name %>
          </option>
        <% }) %>
      </select>

      <label for="guardian_type_id">Guardian Type:</label>
      <select name="guardian_type_id" required>
        <% guardianTypes.forEach(type => { %>
          <option value="<%= type.id %>" <%= type.id === student_guardian.guardian_type_id ? 'selected' : '' %>>
            <%= type.name %>
          </option>
        <% }) %>
      </select>

      <label for="guardian_id">Guardian:</label>
      <select name="guardian_id" disabled>
        <% guardians.forEach(guardian => { %>
          <option value="<%= guardian.id %>" <%= guardian.id === student_guardian.guardian_id ? 'selected' : '' %>>
            <%= guardian.first_name %> <%= guardian.last_name %>
          </option>
        <% }) %>
      </select>

      <button type="submit" class="btn">Submit</button>
    </form>
  </div>
</body>
</html>