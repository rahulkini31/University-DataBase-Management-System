<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Classroom Management</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f9;
        }
        h1 {
            text-align: center;
            color: #333;
        }
        table {
            width: 100%;
            margin: 20px auto;
            border-collapse: collapse;
        }
        table, th, td {
            border: 1px solid #ddd;
        }
        th, td {
            padding: 10px;
            text-align: left;
        }
        th {
            background-color: #f8f8f8;
        }
        .action-buttons {
            text-align: center;
        }
        .action-buttons a {
            display: inline-block;
            padding: 10px 15px;
            margin: 5px;
            text-decoration: none;
            color: #fff;
            border-radius: 5px;
        }
        .create-btn {
            background-color: #28a745;
        }
        .update-btn {
            background-color: #007bff;
        }
        .delete-btn {
            background-color: #dc3545;
        }
        .create-btn:hover,
        .update-btn:hover,
        .delete-btn:hover {
            opacity: 0.9;
        }
    </style>
</head>
<body>
    <h1>Classroom Management</h1>

    <div class="action-buttons">
        <a href="/classroom/create" class="create-btn">Create Classroom</a>
    </div>

    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Room Type</th>
                <th>Room Name</th>
                <th>Capacity</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% classrooms.forEach(function(classroom) { %>
            <tr>
                <td><%= classroom.id %></td>
                <td><%= classroom.room_type_id %></td>
                <td><%= classroom.room_name %></td>
                <td><%= classroom.capacity %></td>
                <td>
                    <div class="action-buttons">
                        <a href="/classroom/update/<%= classroom.id %>" class="update-btn">Update</a>
                        <a href="/classroom/delete/<%= classroom.id %>" class="delete-btn" onclick="return confirm('Are you sure you want to delete this classroom?');">Delete</a>
                    </div>
                </td>
            </tr>
            <% }) %>
        </tbody>
    </table>
</body>
</html>